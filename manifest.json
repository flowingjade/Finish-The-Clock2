{
  "manifest_version": 3,
  "name": "finishTheClock",
  "version": "1.0",
  "description": "Block certain websites until you complete your tasks.",
  "icons":{
    "48": "icons8-hourglass-48.png"
  },
  "action": {
    "default_icon": "icons8-hourglass-48.png",
    "default_title": "finishTheClock",
    "default_popup": "popup/popup.html"
},
"offline_enabled": true,
"commands": {
  "_execute_action": {}
},
  "permissions": ["storage","alarms","notifications",
      "webRequest", "declarativeNetRequest","contextMenus"
      
],
  "host_permissions":[
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
