{
  "manifest_version": 2,
  "name": "finishTheClock",
  "version": "1.0",
  "description": "Block certain websites until you complete your tasks.",
  "icons":{
    "48": "icons8-hourglass-48.png"
  },
  "browser_action": {
    "default_icon": "icons8-hourglass-48.png",
    "default_title": "finishTheClock",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage","alarms","notifications", "debugger",
      "webRequest", "webRequestBlocking",
      "http://*/*", "https://*/*"
],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}